{
    "name": "crypto-markets/common",
    "description": "Common components for cryptocurrency exchange markets.",
    "keywords": ["cryptocurrency", "exchange"],
    "license": "MIT",
    "authors": [
        {
            "name": "Sercan Cakir",
            "email": "srcnckr@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0",
        "php-http/client-implementation": "~1.0",
        "php-http/discovery": "~1.3",
        "php-http/message": "~1.6"
    },
    "require-dev": {
        "crypto-markets/tests": "~1.0",
        "php-http/mock-client": "~1.0"
    },
    "autoload": {
        "psr-4": {
            "CryptoMarkets\\": "src/"
        }
    },
    "suggest": {
        "php-http/guzzle6-adapter": "Use the Guzzle to send your requests."
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
